<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradientbg"
    android:id="@+id/frag_containerLogin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Iv1"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@drawable/lines"
            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Single Sign On"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Email"
            android:textStyle="italic"
            android:drawableLeft="@drawable/user" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etUsername"
            android:hint="  Password"
            android:textStyle="italic"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/pass"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPassword"
            android:hint="  Role"
            android:textSize="18dp"
            android:textStyle="italic"
            android:drawableLeft="@drawable/role"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRole"
            android:layout_below="@+id/etRole"
            android:orientation="vertical"
            >
            <RadioButton
                android:id="@+id/admin"
                android:textStyle="italic"
                android:hint="Admin"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mahasiswa"
                android:textStyle="italic"
                android:layout_marginLeft="10dp"

                android:hint="Student"
                >
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dosen"
                android:textStyle="italic"
                android:hint="Lecturer"
                android:layout_marginLeft="10dp"

                >
            </RadioButton>
        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="Login"
            android:background="@drawable/bg_btn"
            android:drawableRight="@drawable/login"
            app:backgroundTint="@color/blue">
        </Button>

    </LinearLayout>

</RelativeLayout>